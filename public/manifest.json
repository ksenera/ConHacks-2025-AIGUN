{
    "name": "Environmental & ESG Score Extension",
    "description": "This extension is made to pull ESG scores and relevant sustainbility news for consumers.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
       "activeTab",
       "scripting"
    ],
    "host_permissions": [
      "http://127.0.0.1:5000/*" 
    ],
    "background": {
       "service_worker": "background.js"
    },
    "action": {
         "default_title": "Toggle Sidebar"
   }
    
 }